<!-- Layout containing the sign in and sign up buttons. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gradecalculator.MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="#012060" >
 
    <!-- Image of the app. -->
     <ImageView
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:src="@drawable/athena_grades_small" 
       android:id="@+id/icon" 
       android:contentDescription="@string/app_name"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="15dp" />

     <!--  View for the username. -->
   <EditText
        android:id="@+id/username_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_placeholder"
        android:layout_below="@id/icon"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
	   	android:layout_marginRight="20dp"
	   	android:layout_marginLeft="20dp"
	   	android:layout_marginTop="10dp"
	   	android:textColor="#FFF" />

	<!--  View for the password. -->
   <EditText
       android:id="@+id/password_placeholder"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"      
       android:hint="@string/password_placeholder"
       android:inputType="textPassword"
       android:singleLine="true"
	   android:layout_centerHorizontal="true"
	   android:layout_below="@id/username_placeholder"
	   android:layout_marginRight="20dp"
	   android:layout_marginLeft="20dp"
	   android:textColor="#FFF" />
   <!--  Button to sign in. -->
   <Button
       android:id="@+id/signIn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       android:text="@string/signIn" 
       android:textColor="#F3F3F3"
       android:background="@drawable/button_item"
       android:layout_below="@id/password_placeholder"
       android:gravity="center" />
   
  
      <!--  Button to sign up. -->
  	<Button
       android:id="@+id/signUp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginRight="20dp"
       android:background="@drawable/button_item"
	   android:layout_marginLeft="20dp" 
	   android:textColor="#F3F3F3"
       android:text="@string/signUp" 
       android:gravity="center"
       android:layout_below="@id/signIn" />
    
</RelativeLayout>

